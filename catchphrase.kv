<MyScreenManager>:
    LoginScreen:
    GameChooserScreen:
    MakeGameScreen:
    #  selection list screen done in python
    SelectWordsListScreen:
    JoinGameScreen:
    GameLobbyScreen:
    MyGameScreen:

<JoinGameScreen>:
    game_name_input: join_game_id_input
    name: 'join game'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout
            Label:
                text: 'Enter Game Name:'
            TextInput:
                id: join_game_id_input
                multiline: False
        Button:
            size_hint_y: .2
            text: 'Join Game'
            on_release: app.root.current = 'game lobby'

<MyLabel>:
    size: self.texture_size
    canvas.after:
        Color:
            rgba: (0,0,1,.5)
        Rectangle:
            pos: self.pos
            size: self.size
<MyScat>:
    canvas.after:
        Color:
            rgba: (0,1,1,.5)
        Rectangle:
            pos: self.pos
            size: self.size

<MyGameScreen>:
    name: 'game'
    players_turn_label: display_name
    word_label: word_box
    bottom_buttons: buttons
    time_label: timer
    scores_label: score
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                id: display_name
                text: "Current Turn: "
            Label:
                id: score
        BoxLayout:
            Label:
                id: word_box
                text: "Not Your Turn"
            Label:
                id: timer
                text: ""
        BoxLayout:
            id: buttons

<GameLobbyScreen>:
    name: 'game lobby'
    view_label: player_view_label
    view_list: player_view_list
    pointing_to: player_pointing_to
    #overall layout
    BoxLayout:
        orientation: 'vertical'
        #top lists
        BoxLayout:
            #status view
            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: player_view_label
                    size_hint_y: .1
                    text: ''
                ListView:
                    id: player_view_list
            #Player that I "hand" device to
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint_y: .1
                    text: 'Player after me'
                ListView:
                    id: player_pointing_to
        #bottom buttons
        BoxLayout:
            size_hint_y: .2
            Button:
                text: 'Submit'
                on_release: root.submit_point_at()
            Button
                text: 'Start'
                on_release: root.submit_start_game_request()

<MyListView>:


<GameChooserScreen>:
    name: 'game chooser'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Make Game'
            on_release:
                app.root.current = 'make game'
                app.root.current_screen.get_unique_game_id()
        Button:
            text: 'Join Game'
            on_release: app.root.current = 'join game'

<MakeGameScreen>:
    name: 'make game'
    unique_game_id: make_game_id_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Game ID'
            TextInput:
                id: make_game_id_input
                multiline: False
                text: "Getting Unique Game ID"
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Select Word List'
            Button:
                on_release: app.root.current = 'select word list'
                text: root.word_list_name
        Button:
            text: 'Make Game'
            on_release: root.make_and_join_game()

<LoginScreen>:
    name: 'login'
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Nickname:'
            TextInput:
                id: username_input
                text: 'default'
                multiline: False

        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Optional Password:'
            TextInput:
                id: password_input
                multiline: False
                password: True

        Button:
            size_hint_y: None
            height: self.parent.height * .2
            on_release: root.login(username_input.text, password_input.text)
            text: 'login:'




