<MyScreenManager>:
    LoginScreen:
    GameChooserScreen:
    MakeGameScreen:
    #  selection list screen done in python
    SelectWordsListScreen:
    JoinGameScreen
    GameLobbyScreen

<JoinGameScreen>:
    game_name_input: join_game_id_input
    name: 'join game'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout
            Label:
                text: 'Enter Game Name:'
            TextInput:
                id: join_game_id_input
                multiline: False
        Button:
            size_hint_y: .2
            text: 'Join Game'
            on_release: app.root.current = 'game lobby'

<MyLabel>:
    size: self.texture_size
    canvas.after:
        Color:
            rgba: (0,0,1,.5)
        Rectangle:
            pos: self.pos
            size: self.size
<MyScat>:
    canvas.after:
        Color:
            rgba: (0,1,1,.5)
        Rectangle:
            pos: self.pos
            size: self.size

<GameLobbyScreen>:
    name: 'game lobby'
    #overall layout
    BoxLayout:
        orientation: 'vertical'
        #top lists
        BoxLayout:
            #status view (current order and unordered players)
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint_y: .1
                    text: 'Current Order'
                ListView:
                    item_strings: [str(index) for index in range(10)]
                Label:
                    size_hint_y: .1
                    text: 'Unordered Players'
                ListView:
                    item_strings: [str(index) for index in range(10)]
            #Player that I "hand" device to
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint_y: .1
                    text: 'Player after me'
                ListView:
                    item_strings: [str(index) for index in range(20)]
        #bottom buttons
        BoxLayout:
            size_hint_y: .2
            Button:
                text: 'Submit Changes'
                on_release: pass
            Button
                text: 'Start'
                on_release: pass

<MyListView>:


<GameChooserScreen>:
    name: 'game chooser'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Make Game'
            on_release:
                app.root.current = 'make game'
                app.root.current_screen.get_unique_game_id()
        Button:
            text: 'Join Game'
            on_release: app.root.current = 'join game'

<MakeGameScreen>:
    name: 'make game'
    unique_game_id: make_game_id_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Game ID'
            TextInput:
                id: make_game_id_input
                multiline: False
                text: "Getting Unique Game ID"
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Select Word List'
            Button:
                on_release: app.root.current = 'select word list'
                text: root.word_list_name
        Button:
            text: 'Make Game'
            on_release: pass

<LoginScreen>:
    name: 'login'
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Nickname:'
            TextInput:
                id: username_input
                text: 'default'
                multiline: False

        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Optional Password:'
            TextInput:
                id: password_input
                multiline: False
                password: True

        Button:
            size_hint_y: None
            height: self.parent.height * .2
            on_release: root.login(username_input.text, password_input.text)
            text: 'login:'




