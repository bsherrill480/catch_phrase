<LoginScreen>:
    name: 'login'
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Nickname:'
            TextInput:
                id: username_input
                text: 'default'
                multiline: False

        BoxLayout:
            size_hint_y: None
            height: self.parent.height * .4
            orientation: 'horizontal'
            Label:
                text: 'Optional Password:'
            TextInput:
                id: password_input
                multiline: False
                password: True

        Button:
            size_hint_y: None
            height: self.parent.height * .2
            on_release: root.login(username_input.text, password_input.text)
            text: 'login:'




